<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to 'New User', new_user_path,class: "btn btn-success" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= Course.find(user.course_id).name if user.course_id %></td>
        <td><%= Role.find(user.role_id).name if user.role_id %></td>
        <td><%= link_to 'Show', user,class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_user_path(user),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

